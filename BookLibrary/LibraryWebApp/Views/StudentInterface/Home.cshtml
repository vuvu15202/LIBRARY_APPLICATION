@using ClassLibrary.Models;
<!DOCTYPE html>

<html>
<head>
    <title>Library Website</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        .container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            grid-gap: 50px;
            padding: 20px;
        }

        .card {
            background-color: #fff;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
            overflow: hidden;
        }

            .card img {
                width: 100%;
                height: 291px;
            }

            .card h2 {
                font-size: 18px;
                font-weight: bold;
                margin: 10px;
            }

            .card p {
                font-size: 14px;
                margin: 10px;
            }

            .card button {
                display: block;
                border: none;
                background-color: limegreen;
                color: #fff;
                padding: 10px;
                margin: 10px;
                border-radius: 5px;
                font-size: 16px;
                font-weight: bold;
                cursor: pointer;
                transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out;
            }

                .card button:hover {
                    background-color: #0056b3;
                }
    </style>
</head>
<body>
    @{
        List<Book> bookList= ViewBag.bookList;
    }
    <div class="container">
        @foreach (var item in @bookList)
        {
            if (@item.Quantity>=0)
            {
                <div class="card">
                    <img src="~/BookImages/@item.Image" alt="book" />
                    <h2>@item.BookName</h2>
                    <p>ID: @item.BookId</p>
                    <p>Category: @item.Category</p>
                    <p>Quantity: @item.Quantity</p>
                    <button onclick="Borrow(@item.BookId)">Borrow now</button>
                </div>
            }
            
        }
        
        
    </div>
</body>
<script>
    function Borrow(param) {
        window.location = '/StudentInterface/Borrow?bookID=' + param
    }
</script>
</html>

