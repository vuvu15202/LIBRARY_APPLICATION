<!DOCTYPE html>

<html>
<head>
    <title>Library Website</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #007bff;
            color: #fff;
            padding: 20px;
            border-radius: 5px;
        }

            .header h1 {
                margin: 0;
            }

            .header button {
                border: none;
                background-color: #fff;
                color: #007bff;
                padding: 10px 20px;
                border-radius: 5px;
                font-size: 16px;
                font-weight: bold;
                cursor: pointer;
                transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out;
            }

                .header button:hover {
                    background-color: #007bff;
                    color: #fff;
                }

        .navbar {
            display: flex;
            justify-content: center;
            background-color: #f5f5f5;
            padding: 10px;
            border-radius: 5px;
        }

            .navbar a {
                color: #007bff;
                text-decoration: none;
                padding: 10px;
                margin: 0 10px;
                font-size: 16px;
                font-weight: bold;
                transition: color 0.2s ease-in-out;
            }

                .navbar a:hover {
                    color: #0056b3;
                }
    </style>
</head>
<body>
    <div class="header">
        <h1>Library Website</h1>
        <div>

            <button onclick="location.href='/Account/Login'">Logout</button>

        </div>
    </div>
    <div class="navbar">
        <a href="/StudentInterface/Home">Home</a>
        <a href="/StudentInterface/History">Borrow History</a>
        <a href="/BookManagement/Book">Book Management</a>
    </div>
</body>
</html>





@model ClassLibrary.Models.History;
@using ClassLibrary.Models;

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    History history = ViewBag.history;
}

<h1>Detail</h1>

<div>
    <h4>History</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BorrowDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BorrowDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReturnDeadline)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReturnDeadline)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReturnedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReturnedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Book)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Book.BookId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Librarian)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Librarian.AccountId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Student)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Student.AccountId)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Returned", "Returned", new {  id = @history.LibrarianId}) |
    @Html.ActionLink("Borrowed", "Borrowed", new {  id =  @history.LibrarianId }) |
    <a asp-action="History">Back to List</a>
</div>
