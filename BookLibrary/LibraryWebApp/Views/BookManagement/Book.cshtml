<!DOCTYPE html>

<html>
<head>
    <title>Library Website</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #007bff;
            color: #fff;
            padding: 20px;
            border-radius: 5px;
        }

            .header h1 {
                margin: 0;
            }

            .header button {
                border: none;
                background-color: #fff;
                color: #007bff;
                padding: 10px 20px;
                border-radius: 5px;
                font-size: 16px;
                font-weight: bold;
                cursor: pointer;
                transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out;
            }

                .header button:hover {
                    background-color: #007bff;
                    color: #fff;
                }

        .navbar {
            display: flex;
            justify-content: center;
            background-color: #f5f5f5;
            padding: 10px;
            border-radius: 5px;
        }

            .navbar a {
                color: #007bff;
                text-decoration: none;
                padding: 10px;
                margin: 0 10px;
                font-size: 16px;
                font-weight: bold;
                transition: color 0.2s ease-in-out;
            }

                .navbar a:hover {
                    color: #0056b3;
                }
    </style>
</head>
<body>
    <div class="header">
        <h1>Library Website</h1>
        <div>

            <button onclick="location.href='/Account/Login'">Logout</button>

        </div>
    </div>
    <div class="navbar">
        <a href="/StudentInterface/Home">Home</a>
        <a href="/StudentInterface/History">Borrow History</a>
        <a href="/BookManagement/Book">Book Management</a>
    </div>
</body>
</html>





@model IEnumerable<ClassLibrary.Models.Book>
@using ClassLibrary.Models

@{
    ViewData["Title"] = "Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    List<Book> list = ViewBag.BookList;
}
<h1>Book Management</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @list)
        {
        <tr>
            <td>
                <img width="70px;" src="~/BookImages/@item.Image" alt="book" />
            </td>
            <td>
                @item.BookName
            </td>
            <td>
                @item.Category
            </td>
            
            <td>
                @item.Quantity
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BookId">Edit</a> |
                    <button style="border:none;background:none;color:blue;padding:unset"
                        onclick="if(confirm('Do you want to delete this employee (@item.BookId)?')){
				window.location='/BookManagement/Delete?id=@item.BookId'}">
                        Delete
                    </button>
                @*<a asp-action="Delete" asp-route-id="@item.BookId">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
