<!DOCTYPE html>

<html>
<head>
    <title>Library Website</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #007bff;
            color: #fff;
            padding: 20px;
            border-radius: 5px;
        }

            .header h1 {
                margin: 0;
            }

            .header button {
                border: none;
                background-color: #fff;
                color: #007bff;
                padding: 10px 20px;
                border-radius: 5px;
                font-size: 16px;
                font-weight: bold;
                cursor: pointer;
                transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out;
            }

                .header button:hover {
                    background-color: #007bff;
                    color: #fff;
                }

        .navbar {
            display: flex;
            justify-content: center;
            background-color: #f5f5f5;
            padding: 10px;
            border-radius: 5px;
        }

            .navbar a {
                color: #007bff;
                text-decoration: none;
                padding: 10px;
                margin: 0 10px;
                font-size: 16px;
                font-weight: bold;
                transition: color 0.2s ease-in-out;
            }

                .navbar a:hover {
                    color: #0056b3;
                }
    </style>
</head>
<body>
    <div class="header">
        <h1>Library Website</h1>
        <div>

            <button onclick="location.href='/Account/Login'">Logout</button>

        </div>
    </div>
    <div class="navbar">
        <a href="/StudentInterface/Home">Home</a>
        <a href="/StudentInterface/History">Borrow History</a>
    </div>
</body>
</html>

@model IEnumerable<ClassLibrary.Models.History>
@using ClassLibrary.Models
@{
    ViewData["Title"] = "History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>History</h1>
@{
     List<History> HistoryList=  ViewBag.historyList;
    List<Account> AccountList = ViewBag.accountList;
}

<table class="table">
    <thead>
        <tr>
            <th>
                HistoryID
            </th>
            <th>
                Librarian
            </th>
            <th>
                Student
            </th>
            <th>
                BookID
            </th>
            <th>
                BorrowDate
            </th>
            <th>
                ReturnDeadline
            </th>
            <th>
                ReturnedDate
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @HistoryList)
        {
            <tr>
                <td>
                    @item.HistoryId
                </td>
                @foreach (var libra in @AccountList)
                {
                    if (libra.AccountId == item.LibrarianId)
                    {
                        <td>
                            @libra.Email
                        </td>
                    }
                }
                @foreach (var stu in @AccountList)
                {
                    if (stu.AccountId == item.StudentId)
                    {
                        <td>
                            @stu.Email
                        </td>
                    }
                }
                <td>
                    @item.BookId
                </td>
                <td>
                    @item.BorrowDate
                </td>
                <td>
                    @item.ReturnDeadline
                </td>
                <td>
                    @item.ReturnedDate
                </td>

                
            </tr>
        }
    </tbody>
</table>
